<%- include('../partials/user/header.ejs') %>
    <style>
        

.breadcrumb {
    background-color: transparent;
    padding: 20px 0;
    margin-bottom: 0;
}

.product-gallery {
    background: white;
    padding: 20px;
    height: 500px;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
}

.product-image-slider figure {
    margin: 0;
    border-radius: 12px;
    overflow: hidden;
}

.product-image-slider img {
    width: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.slider-nav-thumbnails {
    display: flex;
    gap: 10px;
    margin-top: 15px;
    padding: 0 15px;
}

.slider-nav-thumbnails img {
    width: 400px;
    height: 60px;
    margin-right: 10px;
    object-fit: cover;
    border-radius: 8px;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.3s ease;
}

.slider-nav-thumbnails img:hover {
    opacity: 1;
}

.product-info-card {
    background: white;
    padding: 30px;
    height: 500px;

    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
}

.product-title {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 15px;
    color: #4a3422;
}

.product-brand {
    color: #7a5b3a;
    font-size: 16px;
    margin-bottom: 20px;
}

.product-price {
    display: flex;
    align-items: center;
    gap: 15px;
    margin: 25px 0;
}

.sale-price {
    font-size: 28px;
    font-weight: 600;
    color: #b68b40;
}

.regular-price {
    font-size: 20px;
    color: #9a7b3d;
    text-decoration: line-through;
}

.offer-badge {
    background: #b68b40;
    color: white;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 14px;
}

.product-description {
    color: #6a5b4a;
    line-height: 1.6;
    margin: 20px 0;
    padding: 20px 0;
    border-top: 1px solid #e0d3c4;
    border-bottom: 1px solid #e0d3c4;
}

.quantity-selector {
    display: flex;
    align-items: center;
    gap: 20px;
    margin: 30px 0;
}

.quantity-input {
    display: flex;
    align-items: center;
    border: 2px solid #d8c3a8;
    border-radius: 8px;
    overflow: hidden;
}

.quantity-btn {
    background: #f4f1ed;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
    transition: background-color 0.2s;
}

.quantity-btn:hover {
    background: #e0d3c4;
}

.quantity-display {
    width: 50px;
    text-align: center;
    border: none;
    font-size: 16px;
}

.action-buttons {
    display: flex;
    gap: 15px;
    margin-top: 30px;
}

.add-to-cart-btn, .buy-now-btn {
    flex: 1;
    padding: 15px 30px;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s;
}

.add-to-cart-btn {
    background: #b68b40;
    color: white;
}

.buy-now-btn {
    background: #8b6b30;
    color: white;
}

.add-to-cart-btn:hover, .buy-now-btn:hover {
    transform: translateY(-2px);
}

.wishlist-btn {
    background: transparent;
    border: 2px solid #d8c3a8;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
}

.wishlist-btn:hover {
    border-color: #b68b40;
    color: #b68b40;
}

/* Recommended Products Section */
.recommended-section {
    margin-top: 50px;
    padding: 40px 0;
    
}

.section-title {
    text-align: center;
    font-size: 32px;
    margin-bottom: 40px;
    color: #4a3422;
    position: relative;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: #b68b40;
}

.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
    padding: 0 20px;
}

.product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
    transition: transform 0.3s;
}

.product-card:hover {
    transform: translateY(-5px);
}

.product-card-image {
    position: relative;
    padding-top: 100%;
}

.product-card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-card-content {
    padding: 20px;
}

.product-card-title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 10px;
    color: #4a3422;
}

.product-card-price {
    font-size: 18px;
    color: #b68b40;
    font-weight: 600;
}

.stock-status {
    font-size: 14px;
    margin-top: 10px;
}

.stock-status.in-stock {
    color: #b68b40;
}

.stock-status.out-of-stock {
    color: #8b6b30;
}

.product-card-actions {
    display: flex;
    gap: 10px;
    margin-top: 15px;
}

.card-action-btn {
    flex: 1;
    padding: 8px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.2s;
}

.card-action-btn.cart {
    background: #b68b40;
    color: white;
}

.card-action-btn.wishlist {
    background: #f4f1ed;
    color: #6a5b4a;
}

.card-action-btn:hover {
    opacity: 0.9;
}

@media (max-width: 768px) {
    .product-container {
        padding: 20px;
    }

    .action-buttons {
        flex-direction: column;
    }

    .wishlist-btn {
        align-self: center;
    }

    .product-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }
}
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">


    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/category/<%= product.category %>"><%= cat.name %></a></li>
                <li class="breadcrumb-item active"><%= product.productName %></li>
            </ol>
        </nav>

        <div class="product-container">
            <div class="row">
                <div class="col-md-6">
                    <div class="product-gallery">
                        <div class="product-image-slider">
                            <% product.productImage.forEach(image => { %>
                                <figure>
                                    <img style="height: 380px;" src="/uploads/re-image/<%= image %>" alt="<%= product.productName %>">
                                </figure>
                            <% }) %>
                        </div>
                        <div class="slider-nav-thumbnails">
                            <% product.productImage.forEach(image => { %>
                                <img src="/uploads/re-image/<%= image %>" alt="thumbnail">
                            <% }) %>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="product-info-card">
                        <h1 class="product-title"><%= product.productName %></h1>
                        <div class="product-brand">
                            Brand: <a href="#"><%= product.brand %></a>
                        </div>

                        <div class="product-price">
                            <span class="sale-price">₹<%= product.salePrice.toLocaleString() %></span>
                            <span class="regular-price">₹<%= product.regularPrice.toLocaleString() %></span>
                            <span class="offer-badge"><%= product.productOffer %>% OFF</span>
                        </div>

                        <p class="product-description"><%= product.description %></p>

                        <% if(product.quantity > 0) { %>
                            <div class="quantity-selector">
                                <div class="quantity-input">
                                    <button class="quantity-btn" onclick="updateQuantity(-1)">-</button>
                                    <input type="text" class="quantity-display" id="product-qty" value="1" readonly data-max-qty="<%= product.quantity %>">
                                    <button class="quantity-btn" onclick="updateQuantity(1)">+</button>
                                </div>
                                <div class="stock-status in-stock">
                                    <%= product.quantity %> items in stock
                                </div>
                            </div>
                            
                            <div class="action-buttons">
                                <button class="add-to-cart-btn" onclick="addToCart('<%= product._id %>')">
                                    Add to Cart
                                </button>
                                <button class="buy-now-btn" onclick="redirectToCheckout('<%= product._id %>')">
                                    Buy Now
                                </button>
                                <button class="wishlist-btn" onclick="addToWishlist('<%= product._id %>')">
                                    <i class="fi-rs-heart"></i>
                                </button>
                            </div>
                        <% } else { %>
                            <div class="stock-status out-of-stock">
                                Currently Out of Stock
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        
        <!-- Recommended Products Section -->
        <section class="recommended-section">
            <h2 class="section-title">Recommended Products</h2>
            <div class="product-grid">
                <% recommended.forEach(product => { %>
                    <div class="product-card">
                        <div class="product-card-image">
                            <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                        </div>
                        <div class="product-card-content">
                            <h3 class="product-card-title"><%= product.productName %></h3>
                            <div class="product-card-price">₹<%= product.salePrice.toLocaleString() %></div>
                            <div class="stock-status <%= product.quantity > 0 ? 'in-stock' : 'out-of-stock' %>">
                                <%= product.quantity > 0 ? `${product.quantity} in stock` : 'Out of stock' %>
                            </div>
                            <div class="product-card-actions">
                                <button class="card-action-btn cart" onclick="addToCart('<%= product._id %>')">
                                    <i class="fi-rs-shopping-bag-add"></i>
                                </button>
                                <button class="card-action-btn wishlist" onclick="addToWishlist('<%= product._id %>')">
                                    <i class="fi-rs-heart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function addToCart(productId) {
    fetch('/addToCart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ id: productId })
    })
    .then(response => {
        if (!response.ok) {
            throw new Error(`HTTP error! Status: ${response.status}`);
        }
        return response.json();
    })
    .then(data => {
        if (data.redirect) {
            window.location.href = data.redirect;
        } else {
            Swal.fire({
                title: 'Cart Updated!',
                text: data.message || 'Product added to your cart.',
                icon: 'success',
                confirmButtonText: 'View Cart',
                confirmButtonColor: '#3085d6',
                showCancelButton: true,
                cancelButtonText: 'Continue Shopping',
                cancelButtonColor: '#d33'
            }).then(result => {
                if (result.isConfirmed) {
                    window.location.href = '/getCart';
                }
            });
        }
    })
    .catch(error => {
      window.location.href='/login'
    });
}
        async function addToWishlist(productId) {
    try {
        const response = await fetch('/addToWishlist', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ id: productId })
        });

        const data = await response.json();
        
        if (response.ok) {
            Swal.fire({
                icon: 'success',
                title: 'Added to Wishlist',
                text: 'The product has been added to your wishlist!',
                confirmButtonColor: '#3085d6',
                timer: 2000
            });
        } else {
            Swal.fire({
                icon: 'info',
                title: 'Already in Wishlist',
                text: data.message || 'This product is already in your wishlist.',
                confirmButtonColor: '#3085d6',
                timer: 2000
            });
        }
    } catch (error) {
        console.error('Error adding to wishlist:', error);
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'An error occurred while adding the product to your wishlist.',
            confirmButtonColor: '#d33'
        });
    }
}


        function redirectToCheckout(productId) {
            const quantity = document.getElementById('product-qty').value;
            const url = `/checkout?id=${productId}&quantity=${quantity}`;
            window.location.href = url;
        }
        function updateQuantity(change) {
            const qtyInput = document.getElementById('product-qty');
            const maxStockQty = parseInt(qtyInput.getAttribute('data-max-qty')) || 0;
            const maxAllowedQty = Math.min(5, maxStockQty);
            let currentQty = parseInt(qtyInput.value) || 1;

            currentQty = Math.max(1, Math.min(currentQty + change, maxAllowedQty));
            qtyInput.value = currentQty;

            if (currentQty === maxAllowedQty) {
                Swal.fire({
                    title: 'Stock Limit Reached!',
                    text: `Only ${maxAllowedQty} items available in stock.`,
                    icon: 'warning',
                    confirmButtonText: 'OK'
                });
            }
        }
    </script>

