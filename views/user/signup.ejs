<!-- signup.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZOUL - ACCESSORIES - Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        :root {
            --primary-color: #b68b40;
            --primary-hover: #9e7833;
            --bg-color: #fafafa;
            --text-color: #333;
            --error-color: #dc3545;
            --success-color: #198754;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
        }

        .breadcrumb-wrap {
            background-color: #f8f4f0;
            padding: 15px 0;
            text-align: center;
        }

        .breadcrumb a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: bold;
        }

        .breadcrumb span {
            color: var(--primary-color);
            margin: 0 5px;
        }

        .register-section {
            min-height: 90vh;
            display: flex;
            align-items: center;
            background: linear-gradient(rgba(250, 250, 250, 0.9), rgba(250, 250, 250, 0.9));
            padding: 2rem 0;
        }

        .register-wrap {
            background: #fff;
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            width: 100%; /* Decreased width */
            max-width: 700px; /* Added max-width */
            margin: 0 auto; /* Center the form */
        }

        .register-wrap:hover {
            transform: translateY(-5px);
        }

        .heading h3 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-group input {
            width: 100%;
            padding: 0.875rem;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            font-family: 'Roboto', sans-serif;
        }

        .form-group input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(182, 139, 64, 0.1);
            outline: none;
        }

        .toggle-password {
    cursor: pointer;
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
}

.toggle-password i {
    font-size: 16px;
    color: #666;
}

        .error-message {
        display: none;
        color: red;
        font-size: 12px;
        margin-top: 5px;
        }
        .error-message.show {
            display: block;
        }


        .btn-register {
            width: 100%;
            padding: 0.875rem;
            font-size: 1rem;
            background-color: var(--primary-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            font-family: 'Roboto', sans-serif;
        }

        .btn-register:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
        }

        .divider-text-center {
            text-align: center;
            margin: 1.5rem 0;
            position: relative;
        }

        .divider-text-center::before,
        .divider-text-center::after {
            content: '';
            position: absolute;
            top: 50%;
            width: 45%;
            height: 1px;
            background-color: #e0e0e0;
        }

        .divider-text-center::before { left: 0; }
        .divider-text-center::after { right: 0; }

        .divider-text-center span {
            background: #fff;
            padding: 0 1rem;
            color: #666;
            font-size: 0.875rem;
        }

        .btn-google {
            width: 100%;
            padding: 0.875rem;
            background-color: #db4437;
            color: #fff;
            border: none;
            border-radius: 8px;
            margin: 1rem 0;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            font-family: 'Roboto', sans-serif;
        }

        .btn-google:hover {
            background-color: #c53929;
            color: #fff;
        }

        .login-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
        }

        .login-link:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span></span> Register
                </div>
            </div>
        </div>
        <section class="register-section">
            <div class="container">
                <div class="register-wrap">
                    <div class="register-content">
                        <div class="heading">
                            <h3>Create an Account</h3>
                        </div>
                        <form id="signform" method="post" action="/signup">
                            <div class="form-group">
                                <input type="text" id="name" name="name" placeholder="Enter Name" class="form-control">
                                <div class="error-message" id="nameError">Please enter a valid name (letters only).</div>
                            </div>
                            <div class="form-group">
                                <input type="email" id="email" name="email" placeholder="Email" class="form-control">
                                <div class="error-message" id="emailError">Please enter a valid email address.</div>
                            </div>
                            <div class="form-group">
                                <input type="tel" id="phone" name="phone" placeholder="Phone Number" maxlength="10" class="form-control">
                                <div class="error-message" id="phoneError">Please enter a valid phone number (10 digits).</div>
                            </div>
                            <div class="mb-3">
                                <input class="form-control" name="referal" id="referal" placeholder="referal code (Optional)" type="text">
                                <div id="error-4" class="error-message"></div>
                            </div>
                            <div class="form-group">
                                <input type="password" id="password" name="password" placeholder="Password" class="form-control">
                                <span class="toggle-password" data-target="password">
                                    <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                </span>
                                <div class="error-message" id="passwordError">Password must have at least 8 characters, 1 uppercase, 1 lowercase, and 1 number.</div>
                            </div>
                            <div class="form-group">
                                <input type="password" id="cPassword" name="cPassword" placeholder="Confirm Password" class="form-control">
                                <span class="toggle-password" data-target="cPassword">
                                    <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                </span>
                                <div id="cPasswordError" class="error-message">Passwords do not match</div>
                            </div>
                            
                            
                            <%if(locals.message && message.length > 0){%>
                                <div class="alert alert-danger text-center">
                                    <%=message%>
                                </div>
                            <%}%>
                            
                            <button type="submit" class="btn-register" onclick="validateField()">Submit & Register</button>
                        </form>
                        <div class="divider-text-center">
                            <span>or</span>
                        </div>
                        <a href="/auth/google" class="btn-google">Register with Google</a>
                        <div class="text-center mt-4">
                            Already have an account? <a href="/login" class="login-link">Sign in</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
    const inputs = document.querySelectorAll('input');
    const form = document.getElementById('signform');
    const toggleButtons = document.querySelectorAll('.toggle-password');

    // Real-time validation
    inputs.forEach(input => {
        input.addEventListener('input', function () {
            validateField(this);
        });
    });

    function validateField(field) {
    const errorElement = document.getElementById(field.id + 'Error');
    let isValid = true;

    switch (field.id) {
        case 'name':
            isValid = /^[A-Za-z\s]{2,}$/.test(field.value.trim());
            break;
        case 'email':
            isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(field.value.trim());
            break;
        case 'phone':
            isValid = /^\d{10}$/.test(field.value.trim());
            break;
        case 'password':
            isValid = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$/.test(field.value.trim());
            const confirmPassword = document.getElementById('cPassword');
            if (confirmPassword.value.trim()) {
                validateField(confirmPassword); // Re-validate confirm password
            }
            break;
        case 'cPassword':
            const password = document.getElementById('password');
            isValid = field.value.trim() === password.value.trim() && field.value.trim() !== '';
            console.log('Password match:', isValid); // Debugging line
            break;

    }

    if (errorElement) {
        if (!isValid || field.value.trim() === '') {
            errorElement.classList.add('show');
            errorElement.style.display = 'block'; // Make sure the error message is visible
        } else {
            errorElement.classList.remove('show');
            errorElement.style.display = 'none'; // Hide the error message if valid
        }
    }

    return isValid && field.value.trim() !== '';
}


    // Toggle password visibility
    toggleButtons.forEach(button => {
        button.addEventListener('click', function () {
            const targetId = this.getAttribute('data-target');
            const input = document.getElementById(targetId);
            const icon = this.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        });
    });

    // Form submission
    if (form) {
        form.addEventListener('submit', function (e) {
            let isValid = true;

            inputs.forEach(input => {
                if (!validateField(input)) {
                    isValid = false;
                }
            });

            if (!isValid) {
                e.preventDefault();
            }
        });
    }
});

    </script>
</body>
</html>