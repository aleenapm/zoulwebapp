                                            <% } %>
                                    </div>


                                    <div class="product-action-1 show">
                                        <a href="/getCart" aria-label="Add To Cart" class="action-btn hover-up" onclick="addToCart('<%= products[i]._id %>')">
                                            <i class="fi-rs-shopping-bag-add"></i>
                                        </a>
                                    </div>



                                </div>
                            <% } %>
                        </div> 
                        <!--End product-grid-4-->
                    </div>
                </div>
            </div>
