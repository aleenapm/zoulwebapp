<%- include("../../views/partials/user/header") %>
<div class="container mt-4">
   <h3 class="mt-3" style="color: #b68b40; margin-bottom:70px">Edit User Address</h3>
   <form id="addressForm" method="POST" action="/editAddress?id=<%= address._id.toLocaleString() %>" class="border-0 p-3" style="background-color: white; border-radius: 8px;">
       <div class="row mb-50">
           <div class="form-group col-md-4">
               <label for="addressType" style="color: #b68b40;">Address Type:</label>
               <input type="text" class="form-control border-3" style="border-color: #b68b40;" value="<%= address.addressType %>" id="addressType" name="addressType" required>
           </div>
           <div class="form-group col-md-4">
               <label for="name" style="color: #b68b40;">Name:</label>
               <input type="text" class="form-control border-3" style="border-color: #b68b40;" value="<%= address.name %>" id="name" name="name" required>
           </div>
           <div class="form-group col-md-4">
               <label for="city" style="color: #b68b40;">City:</label>
               <input type="text" class="form-control border-3" style="border-color: #b68b40;" id="city" value="<%= address.city %>" name="city" required>
           </div>
       </div>
       <div class="row mb-3">
           <div class="form-group col-md-4">
               <label for="landMark" style="color: #b68b40;">Landmark:</label>
               <input type="text" class="form-control border-3" style="border-color: #b68b40;" value="<%= address.landMark%>" id="landMark" name="landMark" required>
           </div>
           <div class="form-group col-md-4">
               <label for="state" style="color: #b68b40;">State:</label>
               <input type="text" class="form-control border-3" style="border-color: #b68b40;" value="<%= address.state %>" id="state" name="state" required>
           </div>
           <div class="form-group col-md-4">
               <label for="pincode" style="color: #b68b40;">Pincode:</label>
               <input type="number" class="form-control border-3" style="border-color: #b68b40;" value="<%= address.pincode %>" id="pincode" name="pincode" required>
           </div>
       </div>
       <div class="row mb-3">
           <div class="form-group col-md-4">
               <label for="phone" style="color: #b68b40;">Phone:</label>
               <input type="number" class="form-control border-3" style="border-color: #b68b40;" id="phone" value="<%= address.phone %>" name="phone" required>
           </div>
           <div class="form-group col-md-4">
               <label for="altPhone" style="color: #b68b40;">Alternate Phone:</label>
               <input type="number" class="form-control border-3" style="border-color: #b68b40;" id="altPhone" value="<%= address.altPhone %>" name="altPhone" required>
           </div>
       </div>
       <button type="submit" id="submitButton" class="btn" style="background-color: #b68b40; color: white;">Submit</button>
   </form>
</div>

<script>
   document.getElementById('submitButton').addEventListener('click', function (event) {
       if (!validateForm()) {
           event.preventDefault();
       }
   });

   function validateForm() {
       let isValid = true;
       const requiredFields = ["addressType", "name", "city", "landMark", "state", "pincode", "phone", "altPhone"];
       requiredFields.forEach(function (field) {
           const input = document.getElementById(field);
           if (input.value.trim() === "") {
               Swal.fire({
                   title: 'Error',
                   text: 'Please fill all the fields.',
                   icon: 'error',
                   confirmButtonColor: '#b68b40'
               });
               isValid = false;
           }
       });

       return isValid;
   }
</script>
<%- include("../../views/partials/user/footer") %>
