        text-align: center;
        max-width: 1000px;
        margin: 0 auto;
        line-height: 1.6;
        font-size: 15px;
        padding: 0 20px;
    }

    @media (max-width: 768px) {
        .gallery-grid {
            grid-template-columns: 1fr;
