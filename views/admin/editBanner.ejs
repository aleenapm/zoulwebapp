<%- include("../../views/partials/admin/header") %>
<div class="container mt-15 mb-50">
    <h2>Edit Banner</h2>
    <form action="/admin/editBanner" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= banner._id %>">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= banner.title %>" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required><%= banner.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate" value="<%= new Date(banner.startDate).toISOString().split('T')[0] %>" required>
        </div>
        <div class="mb-3">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate" value="<%= new Date(banner.endDate).toISOString().split('T')[0] %>" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Banner Image</label>
            <div>
                <img src="/uploads/re-image/<%= banner.image %>" alt="Current Banner Image" class="img-thumbnail" style="width: 150px;">
            </div>
            <input type="file" class="form-control mt-2" id="image" name="image">
        </div>
        <div class="mb-3">
            <label for="link" class="form-label">Link</label>
            <input type="url" class="form-control" id="link" name="link" value="<%= banner.link %>">
        </div>
        <button type="submit" class="btn btn-primary">Update Banner</button>
    </form>
</div>
<%- include("../../views/partials/admin/footer") %>
